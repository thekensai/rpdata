<table style="border-collapse: separate;border-spacing: 5px;">
<% for(var i=0; i < data.length; i++) { %>
<tr>
<td style="padding:10px;border: 1px;border-color: grey;border-style: solid;">

<div class="flex-container">
	<!--left left right left right-->
	<img src="<%= data[i].propertyPhoto.mediumPhotoUrl%>" style="padding:5px;" class="property-image flex-item" data-property-id="<%=data[i].id%>"/>

	<div class="flex-container-inner flex-item" style="">
		<div  style="" class="flex-item-inner">
			<% if (Array.isArray(data[i].address.singleLineAddress)) {%>
				<% for(var j=0; j < data[i].address.singleLineAddress.length; j++) { %>
				<span class="text-nowrap text-danger" style="font-size:xx-large"><%= data[i].address.singleLineAddress[j]%></span>
				<% }%>
			<%} else {%>
				<span class="text-danger" style="font-size:xx-large"><%= data[i].address.singleLineAddress%></span>
			<% } %>
		</div>

		<table class="property-attribute"  style="padding: 8px; border-collapse: separate;border-spacing: 5px;">
					<tr>
					<td style="background-image:url('img/bed.gif');">
						<%= data[i].attributes.bedrooms%>
					</td>
					<td style="background-image:url('img/bath.gif');">
						<%= data[i].attributes.bathrooms%>
					</td>
					<td style="background-image:url('img/carpark.gif');">
						<%= data[i].attributes.lockUpGarages%>
					</td>
					<td style="background-image:url('img/area.gif');">
						<%= data[i].attributes.landArea%>m2
					</td>
					</tr>
		</table>

		<table style="padding: 8px;width:95%" class="bg-warning property-info">
			<tr>
				<td class="heading">
					Sale Price:
				</td>
				<td>$<%= data[i].lastSaleDetail.price%></td>
			</tr>
			<tr>
				<td class="heading">Sale date:</td>
				<td><%= data[i].lastSaleDetail.contractDate%></td>
			</tr>
			<tr>
				<td class="heading">
					Land Size:
				</td>
				<td><%= data[i].attributes.landArea%>m2</td>
			</tr>
			<tr>
				<td class="heading">
					Distance From Subject
				</td>
				<td><%= data[i].radiusSummary ? data[i].radiusSummary.distanceFromPoint + 'KM' : '' %></td>
				
			</tr>
		</table>

		<div style="margin-top: 0px;">
		<div class="bg-warning" >
			<span  class="heading"><b>Attributes:</b></span>
			<br>
			<span style="padding-left: 10px;">
			<%= data[i].attributes.bedrooms%> Beds, <%= data[i].attributes.bathrooms%> Baths, <%= data[i].attributes.carSpaces%> Car Spaces,
			<%= data[i].attributes.lockUpGarages%> Lock Up Garages,  Ensuites
			</span>
		</div>
		</div>
	</div>
</div>
</td>
</tr>
<% } %>
</table>

<script type='text/javascript'>
        $(".property-image").click(function (e) {
          $.ajax({
              url: "/sales/" + $(this).data('property-id') + '/' 
                ,//+ $('#selectedPropertyType').data('property-type'), 
              success: function(result){
                $("#sales").addClass('hidden');
                setTimeout(function() {
					$("#sales").html(result);
					$("#sales").removeClass('hidden');
					$("#sales").addClass('visible');
                }, 1000);
                
            }});
        });
</script>